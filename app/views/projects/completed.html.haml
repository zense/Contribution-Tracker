.page-header
  = link_to new_project_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Project
  %h1 Projects
  %ul.nav.nav-tabs
    %li
      =link_to 'All',projects_path
    %li
      =link_to 'In Progress',in_progress_path
    %li.active  
      =link_to 'Completed',completed_path
    %li 
      =link_to 'Discarded',discarded_path

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Title
        %th Description
        %th
    %tbody
      = content_tag_for(:tr, @projects) do |project|
        %td= project.title
        %td= project.description
        %td= link_to 'Show', project
