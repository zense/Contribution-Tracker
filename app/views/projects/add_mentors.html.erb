<h3> <%= @project.title %> </h3>
</br>
</br>
<h4>Add Mentors </h4>
</br>
<div class="row">
  <div class="col-md-6">
    <%= form_for(@user,url: {controller: 'projects', action: 'new_mentor'}, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
            Add 
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <% @list_of_users.each do |user| %>
      <h5><strong><%= user.name unless user == nil%></strong></h5>
    <% end %>
    <%= link_to "Save Mentors", save_mentors_path, class: 'btn btn-primary'%>
  </div>
</div>
