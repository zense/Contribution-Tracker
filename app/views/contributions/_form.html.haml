= form_for(@contribution, html: { class: "form-horizontal", role: "form" }) do |f|
  - if @contribution.errors.any?
    .alert.alert-danger.alert-dismissable{:role => "alert"}
      %button.close{"data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
        %span.sr-only Close
      %h4
        = pluralize(@contribution.errors.count, "error")
        prohibited this contribution from being saved:
      %ul
        - @contribution.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    %label.col-sm-2.control-label{:for => "contribution_type"} Type(Project/Session/..etc)
    .col-sm-10
      = f.text_field :contribution_type, class: "form-control"
  .form-group
    %label.col-sm-2.control-label{:for => "name"} Contribution Name
    .col-sm-10
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :description, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
