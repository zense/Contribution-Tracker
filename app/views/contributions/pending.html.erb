<% if current_user.admin %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>Username</th>
              <th>Type</th>
              <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @contribution) do |contribution| %>
              <td><%= contribution.user.name %></td>
              <td><%= contribution.contribution_type %></td>
              <td><%= link_to "#{contribution.name}", contribution %></td>
              <td>
                <%= link_to "Approve", approve_path(id: contribution.id) %>
              </td>
              <td>
                <%= link_to "Reject", reject_path(id: contribution.id) %>
              </td>
        <% end %>

      </tbody>
    </table>
  </div>

<% end %>
