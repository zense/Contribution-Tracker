<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
            <th>Leaderboard</th>
            <th>Projects/Other</th>
            <th>Commits</th>
            <th>Issues</th>
            <th>Pull Req</th>
            <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% i = 1 %>
      <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= i %> </td> <% i += 1 %>
        <td><%= link_to user.name, "/users/#{user.id}" %> </td>
        <td><%= user.contributions.count %></td>
        <td><%= user.commits %></td>
        <td><%= user.issues %></td>
        <td><%= user.pull_requests %></td>
        <td><%= user.total %></td>
      <% end %>
    </tbody>
  </table>
</div>
